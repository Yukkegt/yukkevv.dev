---
import BaseHead from '../components/BaseHead.astro';
import Cursor from '../components/Cursor.astro';
import LoadingSplash from '../components/LoadingSplash.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<LoadingSplash />
		<main>
			<div class="background-effect">
				<div class="background-blur"></div>
			</div>

			<div class="box">
				<div class="content">
					<div class="header">
						<div class="title">
							<h1 class="title-name font-size-xl">Mutsuki<span class="title-id font-size-s"> : yukkevv</span></h1>
							<p class="title-site font-size-s">portfolio site</p>
						</div>
						<h2 class="job-name font-size-l">Developer & Engineer</h2>
					</div>
					
					<div class="a-section">
						<a class="a-item font-size-l" href="/Works">Work</a>
						<a class="a-item font-size-l" href="/About">About</a>
						<a class="a-item font-size-l" href="/Info">Info</a>
					</div>
					
                	<div class="content-box ">
						<slot/>
                	</div>
					
					
					<div class="lang-toggle">
						<input id="toggle" class="toggle-input" type='checkbox' />
						<label for="toggle" class="toggle-label">
							<div class="toggle-ja">ja</div>
							<div class="toggle-en">en</div>
						</label>
					</div>
				</div>

			</div>
			
			
		</main>
		<Cursor/>
		<script src="../script/splash-display.ts"></script>
	</body>
	</html>
	
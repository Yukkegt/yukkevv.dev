---
import BaseHead from '../components/BaseHead.astro';
import Cursor from '../components/Cursor.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/blog-markdown.css';
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<div class="background-effect">
				<div class="background-blur"></div>
			</div>
			<div class="box blog-box">
				<div class="content">					
					<div class="a-section flex gap-8 font-size-m">
						<a class="a-item" href="/Works">Work</a>
						<a class="a-item" href="/About">About</a>
						<a class="a-item" href="/Info">Info</a>
						<a class="a-item" href="/Blog">Blog</a>
					</div>

					<h1 class="font-size-l blog-title"></h1>
					<div class="markdown font-size-m">
						<slot/>
					</div>
				</div>
			</div>
		</main>
		<Cursor/>
		<script src="../script/splash-display.ts"></script>
	</body>
	</html>
	
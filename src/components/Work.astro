---
import { Image } from 'astro:assets';
interface Props {
	service_name:string;
    category: string;
    description: string;
    image: ImageMetadata;
    image_alt: string;
	url: string;

}

const { service_name, category, description, image, image_alt, url } = Astro.props;
---

<div class="work-item">
    <div class="char">
        <h3 class="service-name font-size-m">{service_name}</h3>
        <h4 class="category font-size-m">{category}</h4>
        <p class="description font-size-s">{description}</p>    
    </div>
    <Image class={"img"} src={image} alt={image_alt} />
</div>

